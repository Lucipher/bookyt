%style
  th.action-links {display: none}
  td.action-links {display: none}

%h1
  = t('bookyt.balance_report_for', :company => @company, :per => @date)
#balance-sheet
  %table
    %tr
      %th
        = t('bookyt.working_capital')
      %th
        = t('bookyt.debt_capital')
    %tr
      %td.current-assets{:style => "background-color: #cccccc"}
        %table{:width => "100%"}
          = render 'accounts/list_header'
          = render Account.current_assets.all.select{|a| a.saldo(@date) != 0.0}
          %tr.total
            %th{:colspan => "2"}
              = t('bookyt.total')
            %th.currency= currency_fmt(Account.current_assets.saldo(@date))
          %tr
      %td{:style => "background-color: #cccccc"}
        %table{:width => "100%"}
          = render 'accounts/list_header'
          = render Account.outside_capital.all.select{|a| a.saldo(@date) != 0.0}
          %tr.total
            %th{:colspan => "2"}
              = t('bookyt.total')
            %th.currency= currency_fmt(Account.outside_capital.saldo(@date))
          %tr
    %tr
      %th
        = t('bookyt.capital_assets')
      %th
        = t('bookyt.equity_capital')
    %tr
      %td{:style => "background-color: #aaaaaa"}
        %table{:width => "100%"}
          = render 'accounts/list_header'
          = render Account.capital_assets.all.select{|a| a.saldo(@date) != 0.0}
          %tr.total
            %th{:colspan => "2"}
              = t('bookyt.total')
            %th.currency= currency_fmt(Account.capital_assets.saldo(@date))
          %tr
      %td{:style => "background-color: #aaaaaa"}
        %table{:width => "100%"}
          = render 'accounts/list_header'
          = render Account.equity_capital.all.select{|a| a.saldo(@date) != 0.0}
          %tr.total
            %th{:colspan => "2"}
              = t('bookyt.total')
            %th.currency= currency_fmt(Account.equity_capital.saldo(@date))
          %tr
    %tr.total
      %td
        = t('bookyt.total') + ": #{currency_fmt(Account.current_assets.saldo(@date) + Account.capital_assets.saldo(@date))}"
      %td
        = t('bookyt.total') + ": #{currency_fmt(Account.outside_capital.saldo(@date) + Account.equity_capital.saldo(@date))}"
    - difference = (Account.current_assets.saldo(@date) + Account.capital_assets.saldo(@date)) - (Account.outside_capital.saldo(@date) + Account.equity_capital.saldo(@date))
    - if difference != 0
    %tr.total
      %th
        = t('bookyt.difference')
      %td.currency= currency_fmt(difference)

  = render 'bookings/sidebar'
